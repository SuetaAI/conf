{
  description = "Niri Flake Configuration";

  inputs = {
    # Using unstable for latest kernel (required for sched_ext) and fresh Niri
    nixpkgs.url = "github:nixos/nixpkgs/nixos-unstable";

    # Official Niri flake
    niri.url = "github:YaLTeR/niri";
  };

  outputs = { self, nixpkgs, niri, ... }: {
    nixosConfigurations.my-machine = nixpkgs.lib.nixosSystem {
      system = "x86_64-linux";
      modules = [
        ./configuration.nix
        niri.nixosModules.niri
      ];
    };
  };
}
EOF
