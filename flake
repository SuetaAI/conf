{
  description = "Niri + Sched_ext System";

  inputs = {
    # Используем unstable для свежего ядра и софта
    nixpkgs.url = "github:nixos/nixpkgs/nixos-unstable";

    # Официальный флейк Niri
    niri.url = "github:YaLTeR/niri";
  };

  outputs = { self, nixpkgs, niri, ... }: {
    nixosConfigurations.my-machine = nixpkgs.lib.nixosSystem {
      system = "x86_64-linux";
      modules = [
        ./configuration.nix
        # Модуль Niri из флейка (подключает оверлей автоматически)
        niri.nixosModules.niri
      ];
    };
  };
}
